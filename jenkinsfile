pipeline {
    agent any

    stages {
        stage('Checkout Source Code') {
            steps {
                git branch: 'main', url: 'https://github.com/ZJihane/My-Attendance.git'
            }
        }
        
        stage('Install Composer Dependencies') {
            steps {
                bat 'composer install -v'
            }
        }
        
        stage('Execute PHPUnit Tests') {
            steps {
                bat '''
                if exist vendor\\bin\\phpunit (
                    vendor\\bin\\phpunit
                ) else (
                    echo "PHPUnit not found!"
                    exit /b 1
                )
                '''
            }
        }
        
        stage('Publish Test Results') {
            steps {
                bat 'vendor\\bin\\phpunit --log-junit test-reports\\phpunit.xml'
                junit 'test-reports\\phpunit.xml'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo 'Tests passed!'
        }
        failure {
            echo 'Tests failed!'
        }
    }
}
