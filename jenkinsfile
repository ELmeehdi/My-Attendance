pipeline {
    agent any

    stages {
        stage('Checkout Source Code') {
            steps {
                checkout scm
            }
        }

        stage('Install Composer Dependencies') {
            steps {
                // Use the correct PHP path and install composer dependencies
                bat '"C:/Program Files/php/php.exe" "C:/ProgramData/ComposerSetup/bin/composer.phar" install -v'
            }
        }

        stage('Execute PHPUnit Tests') {
            steps {
                // Run PHPUnit tests and log results
                bat '"C:/Program Files/php/php.exe" "C:\\Users\\HP\\Desktop\\Projects\\devops\\My-Attendance\\vendor\\bin\\phpunit" --log-junit test-results.xml'
            }
        }

        stage('Publish Test Results') {
            steps {
                junit 'test-results.xml'
            }
        }
    }

    post {
        always {
            cleanWs() // Clean the workspace after the build
        }
    }
}
