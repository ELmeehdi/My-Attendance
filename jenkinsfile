pipeline {
    agent any

    stages {
        stage('Checkout Source Code') {
            steps {
                checkout scm
            }
        }

        stage('Install Composer Dependencies') {
            steps {
                // Using Windows Batch script for composer installation
                bat '"C:/ProgramData/ComposerSetup/bin/composer.phar" install -v'
            }
        }

        stage('Execute PHPUnit Tests') {
            steps {
                // Run PHPUnit tests
                bat '"C:\\Users\\HP\\Desktop\\Projects\\devops\\My-Attendance\\vendor\\bin\\phpunit" --log-junit test-results.xml'
            }
        }

        stage('Publish Test Results') {
            steps {
                // Publish the test results to Jenkins
                junit 'test-results.xml'
            }
        }
    }

    post {
        always {
            cleanWs() // Clean the workspace after the build
        }
    }
}
