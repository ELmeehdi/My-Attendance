pipeline {
    agent any

    stages {
        stage('Checkout Source Code') {
            steps {
                checkout scm
            }
        }

        stage('Install Composer Dependencies') {
            steps {
                // Ensure Composer is working properly by specifying PHP path
                bat '"C:/path/to/php.exe" "C:/ProgramData/ComposerSetup/bin/composer.phar" install -v'
            }
        }

        stage('Execute PHPUnit Tests') {
            steps {
                // Run PHPUnit tests and log results
                bat '"C:/path/to/php.exe" "C:\\Users\\HP\\Desktop\\Projects\\devops\\My-Attendance\\vendor\\bin\\phpunit" --log-junit test-results.xml'
            }
        }

        stage('Publish Test Results') {
            steps {
                // Publish test results to Jenkins
                junit 'test-results.xml'
            }
        }
    }

    post {
        always {
            cleanWs() // Clean the workspace after the build
        }
    }
}
